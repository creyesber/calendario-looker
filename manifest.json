{
  "data": {
    "datasets": [
      {
        "id": "ds",
        "label": "Datos",
        "dimensions": [
          {
            "id": "date_dim",
            "label": "Fecha (YYYY-MM-DD)",
            "type": "TEXT"
          }
        ],
        "metrics": []
      }
    ]
  },
  "style": {
    "selectionMode": {
      "label": "Modo de selección",
      "type": "SELECT_SINGLE",
      "options": [
        { "label": "Día", "value": "day" },
        { "label": "Semana", "value": "week" },
        { "label": "Mes", "value": "month" },
        { "label": "Rango", "value": "range" }
      ],
      "defaultValue": "day"
    },
    "allowMulti": {
      "label": "Permitir multiselección",
      "type": "CHECKBOX",
      "defaultValue": true
    }
  },
  "interactions": { "supported": ["FILTER"] },
  "logoUrl": "https://dummyimage.com/48x48/eee/aaa.png&text=Cal",
  "name": "Calendario (pared) – selector de fechas",
  "description": "Calendario mensual con selección de días/semanas/meses que filtra el informe."
}
